            <p className={`text-xs mb-2 ${rec.recommendation === "consider" ? "opacity-90" : "text-slate-500"}`}>
              {rec.message}
            </p>
            <span className={`text-xs px-2 py-1 rounded-full font-medium ${
              rec.recommendation === "consider"
                ? "bg-white/20 text-white"
